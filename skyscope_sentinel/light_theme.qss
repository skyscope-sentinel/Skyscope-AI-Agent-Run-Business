QMainWindow {
    background-color: #ecf0f1; /* Light grey */
    /* border-radius: 15px; */
}

QFrame#sidebar {
    background-color: rgba(230, 230, 230, 0.92); /* Very light grey, slightly more opaque */
    border-top-left-radius: 15px;
    border-bottom-left-radius: 15px;
    border-right: 1px solid #bdc3c7; /* Subtle separator */
}

QPushButton {
    background-color: #e1e5e8; /* Light Greyish Blue */
    color: #2c3e50; /* Wet Asphalt text */
    border: 1px solid #d4d8db; /* Slightly darker border */
    padding: 10px;
    border-radius: 6px;
    min-height: 30px;
    text-align: left;
    padding-left: 10px;
}

QPushButton:hover {
    background-color: #f5f7f9; /* Almost white on hover */
    border: 1px solid #e1e5e8;
}

QPushButton:pressed {
    background-color: #c8ced3; /* Concrete for pressed */
}

QPushButton:checked { /* Style for the active page button in sidebar */
    background-color: #3498db; /* Peter River Blue */
    color: white;
    border-left: 4px solid #2980b9; /* Belize Hole - thicker accent */
    font-weight: bold;
}

QPushButton:disabled {
    background-color: #dcdfe2;
    color: #95a5a6; /* Silver for disabled text */
}

QLabel {
    color: #2c3e50; /* Wet Asphalt text */
    padding: 5px;
}

QWidget#placeholderPage { /* Used by placeholder pages */
    background-color: #ffffff; /* White */
    border-radius: 8px;
}

/* Content area styling */
QWidget#contentArea > QWidget, QStackedWidget > QWidget {
    background-color: #ecf0f1; /* Clouds - main background for content pages */
    border-radius: 8px;
}
QWidget#modelHubPage, QWidget#settingsPage {
    background-color: transparent;
}


QStackedWidget {
    background-color: #ecf0f1; /* Clouds */
    padding: 10px;
}

QWidget#centralWidget {
    border-radius: 15px;
    background-color: #ecf0f1; /* Clouds */
}

/* Input Fields */
QLineEdit {
    background-color: #fdfefe; /* Near white */
    color: #2c3e50;
    border: 1px solid #bdc3c7; /* Silver border */
    border-radius: 4px;
    padding: 8px;
    min-height: 20px;
}
QLineEdit:focus {
    border: 1px solid #3498db; /* Peter River Blue border on focus */
}
QLineEdit:disabled {
    background-color: #e5e7e9;
    color: #95a5a6;
}

/* ComboBox */
QComboBox {
    background-color: #fdfefe;
    color: #2c3e50;
    border: 1px solid #bdc3c7;
    border-radius: 4px;
    padding: 8px;
    min-height: 20px;
}
QComboBox:hover {
    border: 1px solid #cacfd2;
}
QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 20px;
    border-left-width: 1px;
    border-left-color: #bdc3c7;
    border-left-style: solid;
    border-top-right-radius: 3px;
    border-bottom-right-radius: 3px;
    background-color: #e1e5e8;
}
QComboBox::down-arrow {
    image: url(skyscope_sentinel/assets/down_arrow_dark.png); /* Needs this icon */
}
QComboBox QAbstractItemView { /* Dropdown list style */
    background-color: #fdfefe;
    color: #2c3e50;
    border: 1px solid #bdc3c7;
    selection-background-color: #3498db;
    selection-color: white;
    padding: 5px;
}

/* Table Widget */
QTableWidget {
    background-color: #ffffff;
    color: #2c3e50;
    border: 1px solid #dcdfe2; /* Lighter border */
    gridline-color: #e1e5e8;
    border-radius: 4px;
}
QHeaderView::section {
    background-color: #e1e5e8;
    color: #2c3e50;
    padding: 5px;
    border: 1px solid #dcdfe2;
    font-weight: bold;
}
QTableWidget::item {
    padding: 5px;
    border-bottom: 1px solid #e1e5e8; /* Row separator */
}
QTableWidget::item:selected {
    background-color: #3498db;
    color: white;
}

/* TextEdit */
QTextEdit {
    background-color: #fdfefe;
    color: #2c3e50;
    border: 1px solid #bdc3c7;
    border-radius: 4px;
    padding: 5px;
}

/* ScrollBar */
QScrollBar:vertical {
    border: 1px solid #dcdfe2;
    background: #e1e5e8;
    width: 12px;
    margin: 0px 0px 0px 0px;
}
QScrollBar::handle:vertical {
    background: #bdc3c7; /* Silver */
    min-height: 20px;
    border-radius: 5px;
}
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
    background: none;
}
QScrollBar:horizontal {
    border: 1px solid #dcdfe2;
    background: #e1e5e8;
    height: 12px;
    margin: 0px 0px 0px 0px;
}
QScrollBar::handle:horizontal {
    background: #bdc3c7;
    min-width: 20px;
    border-radius: 5px;
}
QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
    background: none;
}

/* ProgressBar */
QProgressBar {
    border: 1px solid #bdc3c7;
    border-radius: 4px;
    background-color: #e1e5e8;
    text-align: center;
    color: #2c3e50; /* Text color on the progress bar */
    padding: 1px;
    min-height: 18px;
}
QProgressBar::chunk {
    background-color: #2ecc71; /* Emerald */
    border-radius: 3px;
    margin: 1px;
}

/* CheckBox */
QCheckBox {
    spacing: 5px;
    color: #2c3e50;
}
QCheckBox::indicator {
    width: 16px;
    height: 16px;
    border: 1px solid #bdc3c7;
    border-radius: 3px;
    background-color: #fdfefe;
}
QCheckBox::indicator:checked {
    background-color: #3498db; /* Peter River */
    image: url(skyscope_sentinel/assets/check_mark_dark.png); /* Needs this icon */
}
QCheckBox::indicator:unchecked:hover {
    border: 1px solid #3498db;
}
QCheckBox:disabled {
    color: #95a5a6;
}
QCheckBox::indicator:disabled {
    background-color: #e5e7e9;
    border: 1px solid #dcdfe2;
}

/* TabWidget */
QTabWidget::pane {
    border: 1px solid #dcdfe2;
    border-top: none;
    background-color: #ffffff; /* White content area for tabs */
    border-bottom-left-radius: 4px;
    border-bottom-right-radius: 4px;
    padding: 10px;
}
QTabBar::tab {
    background: #e1e5e8; /* Light grey tabs */
    color: #2c3e50;
    border: 1px solid #dcdfe2;
    border-bottom: none;
    padding: 8px 15px;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    margin-right: 2px;
}
QTabBar::tab:selected {
    background: #ffffff; /* White for selected tab */
    font-weight: bold;
    border-bottom: 1px solid #ffffff; /* Blend with pane */
}
QTabBar::tab:hover:!selected {
    background: #f5f7f9; /* Lighter grey on hover */
}

/* GroupBox */
QGroupBox {
    color: #2c3e50;
    border: 1px solid #bdc3c7;
    border-radius: 4px;
    margin-top: 10px;
    padding: 10px 5px 5px 5px;
}
QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 5px;
    left: 10px;
    background-color: #ecf0f1; /* Match main background */
    color: #3498db; /* Peter River title */
}

/* QSplitter */
QSplitter::handle {
    background-color: #bdc3c7; /* Silver handle */
}
QSplitter::handle:hover {
    background-color: #cacfd2;
}
QSplitter::handle:pressed {
    background-color: #3498db;
}

/* QStatusBar */
QStatusBar {
    background-color: #ecf0f1; /* Match main window background */
    color: #2c3e50;
    border-top: 1px solid #dcdfe2; /* Separator line */
    padding: 3px;
}
QStatusBar::item {
    border: none;
}

/* QMessageBox */
QMessageBox {
    background-color: #ffffff; /* White background */
    border-radius: 8px;
}
QMessageBox QLabel {
    color: #2c3e50;
    background-color: transparent;
}
QMessageBox QPushButton {
    background-color: #e1e5e8;
    color: #2c3e50;
    border: 1px solid #bdc3c7;
    padding: 8px 15px;
    min-width: 70px;
    border-radius: 4px;
}
QMessageBox QPushButton:hover {
    background-color: #f5f7f9;
}
QMessageBox QPushButton:pressed {
    background-color: #3498db;
    color: white;
}

/* QDialog */
QDialog {
    background-color: #ffffff;
    color: #2c3e50;
    border: 1px solid #bdc3c7;
    border-radius: 8px;
}
QDialog QLabel, QDialog QCheckBox {
    color: #2c3e50;
}
QDialog QPushButton {
    background-color: #e1e5e8;
    color: #2c3e50;
    border: 1px solid #bdc3c7;
    padding: 8px 15px;
    min-width: 70px;
    border-radius: 4px;
}
QDialog QPushButton:hover {
    background-color: #f5f7f9;
}
QDialog QPushButton:pressed {
    background-color: #3498db;
    color: white;
}
}
